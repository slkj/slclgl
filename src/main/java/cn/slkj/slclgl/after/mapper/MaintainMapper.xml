<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.slkj.slclgl.after.mapper.MaintainMapper">
	<sql id="sql_temp">
		id,company,linkman,telephone,address,serviceType,serviceStatus,error,instead,serviceMan,result,riqi,remark,pid,
	(select compName from  tb_company where id = company) as companyName
	</sql>
	<select id="one" resultType="maintain" parameterType="maintain">
		SELECT
		<include refid="sql_temp" /> FROM TB_MAINTAIN WHERE ID = #{id}

	</select>
	<select id="list" resultType="maintain" parameterType="hashmap">
			SELECT <include refid="sql_temp"/>  FROM TB_MAINTAIN
			<where>
			<if test="serviceMan != null and serviceMan != ''">
				AND serviceMan  Like CONCAT('%',#{serviceMan},'%')
			</if>
			<if test="company != null and company != ''">
				AND company = #{company}
			</if>
		</where>
			LIMIT #{startNum},#{endNum}
			
	</select>

	<select id="total" resultType="int" parameterType="hashmap">
		SELECT COUNT(0) FROM TB_MAINTAIN
	</select>
	<insert id="insert" parameterType="maintain">
		INSERT INTO TB_MAINTAIN (
		company,linkman,telephone,address,serviceType,serviceStatus,error,instead,serviceMan,result,riqi,remark
		)
		VALUES(
		#{company},#{linkman},#{telephone},#{address},#{serviceType},#{serviceStatus},#{error},
		#{instead},#{serviceMan},#{result},#{riqi},#{remark})
	</insert>
	<update id="update" parameterType="maintain">
		UPDATE TB_MAINTAIN SET company=#{company},linkman=#{linkman},telephone=#{telephone},
		address=#{address},serviceType=#{serviceType},serviceStatus=#{serviceStatus},error=#{error},
		instead=#{instead},serviceMan=#{serviceMan},result=#{result},riqi=#{riqi},remark=#{remark} 
		WHERE id =#{id}
	</update>
	<delete id="delete" parameterType="string">
		DELETE FROM TB_MAINTAIN WHERE ID = #{id}
	</delete>
	
</mapper>

